{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "prefer-arrow-functions"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "semi": [
            2,
            "always"
        ],
        "eol-last": 2,
        "import/extensions": [
            "error",
            "always"
        ],
        "no-underscore-dangle": [
          "error", {
            "allow": ["_id"]
          }
        ],
        "no-await-in-loop": 0,
        "import/prefer-default-export": 0
    }
}
